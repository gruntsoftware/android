            android:id="@+id/web_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="400dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:scrollbars="vertical" >
        </WebView>
